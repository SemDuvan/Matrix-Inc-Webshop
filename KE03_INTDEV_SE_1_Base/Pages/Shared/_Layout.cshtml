<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KE03_INTDEV_SE_1_Base</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KE03_INTDEV_SE_1_Base.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
</head>
<body>
    @{
        var hideNavbar = Context.Request.Path.Equals("/Index", StringComparison.OrdinalIgnoreCase) ||
        Context.Request.Path.Equals("/", StringComparison.OrdinalIgnoreCase);
    }
    @if (!hideNavbar)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">Matrix Inc.</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Home">Home</a>
                            </li>
                            <li class="nav-item ms-3">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Bestellingen">Bestellingen</a>
                            </li>
                            <li class="nav-item ms-3">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                            </li>
                            <li class="nav-item dropdown ms-auto ms-3">
                                <a class="nav-link position-relative" asp-page="/Bestellen">
                                    <span class="bi bi-cart"></span>
                                    @await Html.PartialAsync("_CartItems")
                                </a>


                              
                                

                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    }

    @if (ViewData["NoBackground"] as bool? == true)
    {
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }
    else
    {
        <div class="background-wrapper bg-dark">
            <div class="container text-white">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    }

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - KE03_INTDEV_SE_1_Base - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
